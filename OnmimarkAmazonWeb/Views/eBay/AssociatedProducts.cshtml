@model IEnumerable<OmnimarkAmazon.Models.eBayItemsProduct>

<p>
    @Html.ActionLink("Create New", "CreateAssociatedProduct", new { ItemID = ViewBag.ItemID })
</p>
<table>
    <tr>
        <th>
            Product
        </th>
        <th>
            Qty
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditAssociatedProduct", new { ItemID = item.ItemID, ProductID = item.ProductID }) |
            @Html.ActionLink("Delete", "DeleteAssociatedProduct", new { ItemID = item.ItemID, ProductID = item.ProductID })
        </td>
    </tr>
}

</table>
