<script src="@Html.GetAppPath()/Scripts/Reports.js" type="text/javascript"></script>

<script type="text/javascript">
    function isNumber(n) {
        return !isNaN(parseFloat(n)) && isFinite(n);
    }
    
    function reportLoaded() {
        
    }

    $(function () {
        loadReport("StaleInventoryReport");

        $("#Days").change(function () {
            if (isNumber($("#Days").val())) {
                $("#Days").css("background-color", "transparent");
                loadReport("StaleInventoryReport?Days=" + $("#Days").val());
            }
            else
                $("#Days").css("background-color", "#FF4444");
        });

    });



</script>

<h2 id="pageTitle" style="float:left;">@ViewBag.Title</h2>

<div id="containerDays" style="float:left; margin-top:17px; margin-left:20px;">
    Days: <input name="Days" id="Days" value="30" size="2" style="text-align:right;" />
</div>

<div style="clear:both;"></div>

<div id="divReport" style="overflow:scroll;"></div>
